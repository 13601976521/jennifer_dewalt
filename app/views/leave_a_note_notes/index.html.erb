<header>
	<div class="head" id="logo">Leave A Note</div>
	<div id="links_container">
	  <a href="index.html" class="head" id="home">Home</a>
	  <a href="http://blog.jenniferdewalt.com" class="head" id="blog">Blog</a>
	</div>
	<br class="clear">
</header>

<div id="container">
	<%= form_for :leave_a_note_note do |f| %>
		<%= f.text_area :content %>
		<%= f.submit :value => 'Submit', :class => "btn" %>
	<% end %>

	<% @notes.each do |note| %>
		<div class="note_container">
			<div class="note_content"><%= note.content %></div>
		</div>
	<% end %>
</div>
